FROM ghcr.io/digiimmi/php-7.4-cli:latest

RUN apt-get update \
&& apt-get upgrade -y \
&& apt-get install -y libzip-dev libmagic-dev libevent-dev libcurl4-openssl-dev libpng-dev pkg-config git wget curl nload \
&& docker-php-ext-install zip fileinfo mysqli bcmath ctype curl gd hash iconv json mbstring pcntl pdo pdo_mysql phar posix xml \
&& mkdir -p /usr/src/APP
WORKDIR /usr/src/APP
